<div class="task priority_<%= task.priority %> completed_ <%= task.completed %>">
  <p>
  <span class="title"><%= task.title %></span>
  <%= link_to "Edit", edit_task_path(task), class: 'action' %>
  <%= link_to "Delete", task, method: :delete, class: 'action' %>
  <%= link_to "Done", complete_task_path(task), data: {method: :put}, class: 'done action' %>
  </p>
</div
